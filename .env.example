# 업비트 API 키 (https://upbit.com/mypage/open_api_management에서 발급)
UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# 거래 모드 (paper: 모의투자, real: 실전투자)
TRADE_MODE=paper

# 거래 설정
TICKER=KRW-BTC
RSI_PERIOD=14
TRADE_AMOUNT_KRW=10000.0

# 손절/익절 (v1.1-tight-tp 최적화 전략)
STOP_LOSS_PCT=0.02
TAKE_PROFIT_PCT=0.01

# 페이퍼 트레이딩 설정
PAPER_INITIAL_KRW=1000000.0
PAPER_STATE_FILE=paper_account.json

# 로그 파일
LOG_FILE=trades.log

# 캔들 간격
CANDLE_INTERVAL=minute5

# 리스크 관리
MAX_INVEST_RATIO=0.30
DAILY_LOSS_LIMIT_PCT=0.05
